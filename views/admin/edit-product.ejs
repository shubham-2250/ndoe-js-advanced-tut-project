<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%-include('../includes/navigation.ejs')%>
    <main>
        <form class="product-form" action="/admin/<% if(editing) { %>edit-product<% } else {%>add-product<%}%>" method="POST">
            <div class="form-control">
                <label for="title">Title<br></label>
                <input type="text" name="title" id="title" value="<% if(editing) { %> <%= product.title %> <% } %>">
                <br>
                <label for="imageURL">Image URL<br></label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if(editing) { %> <%= product.imageUrl %> <% } %>">
                <br>
                <label for="description">Description<br></label>
                <textarea type="text" rows="5" name="description" id="description"><% if(editing) { %> <%= product.description %> <% } %></textarea>
                <br>
                <label for="price">Price<br></label>
                <input type="text" name="price" id="price" value="<% if(editing) { %> <%= product.price %> <% } %>">
                <%if(editing) {%>
                    <input type="hidden" name="productId" id="productId" value="<%= product.id %>">
                <%}%>
                <br>
            </div>
            


            <button type="submit"><% if(editing) {%>Edit Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs')%>